  <refnamediv>
    <refname>exhaustive_selection</refname>

    <refpurpose>exhaustive feature selection</refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <title>Calling Sequence</title>

    <synopsis>[new_samples, feature_idx] = exhaustive_selection(samples, labels, final_dim, fold)</synopsis>
  </refsynopsisdiv>

  <refsection>
    <title>Parameters</title>

    <variablelist>
      <varlistentry>
        <term>samples</term>

        <listitem>
          <para>dim*num data matrix; each column is a data point, each row is
          a feature</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>labels</term>

        <listitem>
          <para>a 1*num vector of lables for each data point</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>final_dim</term>

        <listitem>
          <para>the number of output dimension after feature selection</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>fold</term>

        <listitem>
          <para>number of folds for cross validation</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>new_samples</term>

        <listitem>
          <para>final_dim*num data matrix after feature selection</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>feature_idx</term>

        <listitem>
          <para>selected feature indices</para>
        </listitem>
      </varlistentry>
    </variablelist>
  </refsection>

