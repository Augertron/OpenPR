  <refnamediv xml:id="ml_gaussian">
    <refname>ml_gaussian</refname>

    <refpurpose>Maximum Likelihood Estimation for Gaussian Cases</refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <title>Calling Sequence</title>

    <synopsis>[m, cov] = ml_gaussian(x, c)</synopsis>
  </refsynopsisdiv>

  <refsection>
    <title>Parameters</title>

    <variablelist>
      <varlistentry>
        <term>x</term>

        <listitem>
          <para>Train samples of size dim*num. Each column is a sample.</para>
        </listitem>
      </varlistentry>
    </variablelist>

    <variablelist>
      <varlistentry>
        <term>c</term>

        <listitem>
          <para>Class label vector of size 1*num or num*1.</para>
        </listitem>
      </varlistentry>
    </variablelist>

    <variablelist>
      <varlistentry>
        <term>m</term>

        <listitem>
          <para>The estimate mean, one column for a class.</para>
        </listitem>
      </varlistentry>
    </variablelist>

    <variablelist>
      <varlistentry>
        <term>cov</term>

        <listitem>
          <para>The estimate covariance matrix of each class.</para>
        </listitem>
      </varlistentry>
    </variablelist>
  </refsection>

